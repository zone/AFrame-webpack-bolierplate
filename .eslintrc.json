{
    "parserOptions": {
        "ecmaVersion": 2017,
        "sourceType": "module"
    },

    "env": {
        "es6": true,
        "node": false,
        "browser": true
    },
    "extends": ["prettier", "eslint:recommended"],
    "plugins": ["prettier"],
    "rules": {
        "no-warning-comments": "warn",
        "no-var": "error",
        "no-useless-concat": "error",
        "no-self-assign": "warn",
        "prefer-const": "warn",
        "eqeqeq": "error",
        "max-len": ["warn", { "code": 80 }],
        "indent": ["error", 4],
        "prettier/prettier": ["error"]
    }
}
